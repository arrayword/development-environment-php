---
# VirtualBoxのバグ対策 （参考：　https://www.vagrantup.com/docs/synced-folders/virtualbox.html）
httpd_enable_sendfile: "off"

# バーチャルホスト設定（複数設定可能）
httpd_vhosts:
  - document_root: /var/lib/php/foo/public
    server_name: foo.example.com

# PHPのインストール対象パッケージ
# パッケージ名については以下のコマンドで確認可能
# yum list | grep php72
php_install_packages:
  - php72
  - php72-php
  - php72-php-mbstring
  - php72-php-pdo
  - php72-php-mysqlnd
  - php72-php-xml
  - php72-php-intl
  - php72-php-pecl-xdebug

# 仮想マシンホスト側のIPアドレスを設定する
# Windows環境であれば以下のコマンドで確認可能
# ipconfig
php_xdebug_remote_host: 192.168.11.2
