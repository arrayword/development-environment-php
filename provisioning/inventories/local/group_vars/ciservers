---
# PHPのインストール対象パッケージ
# パッケージ名については以下のコマンドで確認可能
# yum list | grep php
php_install_packages:
  - php
  - php-mbstring
  - php-pdo
  - php-mysqlnd
  - php-xml
  - php-intl
  - php-pecl-zip
  - php-pecl-xdebug

# 使用可能なメモリ量の上限
php_memory_limit: 1024M

# Composerインストールディレクトリ
composer_install_dir: /usr/local/bin/

# Composerファイル名
composer_filename: composer

# Composerバージョン
composer_version: 1.6.4